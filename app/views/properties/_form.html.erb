<%= form_with(model: @property, local: true, url: choose_url) do |f| %>
  <div class="field">
    <p><%= f.label :"物件名" %></p>
    <p><%= f.text_field :name %></p>
    <p><%= f.label :"賃料" %></p>
    <p><%= f.text_field :rete %>円</p>
    <p><%= f.label :"住所" %></p>
    <p><%= f.text_field :address %></p>
    <p><%= f.label :"築年数" %></p>
    <p><%= f.text_field :age %>年</p>
    <p><%= f.label :"備考" %></p>
    <p><%= f.text_area :note %></p>

    <hr width=auto>
    <% @nearest_station.each do |n_s| %>
      <% i = 1 %>
      <h2>最寄り駅"#{i}"</h2>
      <p><%= f.label :"路線名" %></p>
      <p><%= f.text_field :n_s.route %></p>
      <p><%= f.label :"駅名" %></p>
      <p><%= f.text_field :n_s.station %></p>
      <p><%= f.label :"徒歩分数" %></p>
      <p><%= f.text_field :n_s.time %>分</p>
      <% i += 1 %>
    <% end %>
  </div>
  <% if edit_or_new? %>
    <% f.submit :"更新する" %>
  <% else %>
    <% f.submit :"登録する" %>
  <% end %>
  <% link_to "詳細" property_path if edit_or_new? %> | 
  <% link_to "戻る" properties_path %>
<% end %>
