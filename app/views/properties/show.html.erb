<div class="show_div">
    <p>物件名: <%= @property.name %></p>
    <p>賃料: <%= @property.rete %>円</p>
    <p>住所: <%= @property.address %></p>
    <p>築年数: <%= @property.age %>年</p>
    <p>備考: <%= @property.note %></p>
  </div>

  <div class="field">
    <hr width=auto>
    <% i = 0 %>
      <%= f.fields_for :nearest_stations do |n_station| %>
        <h2>最寄り駅<%= i += 1 %></h2>
        <p><%= f.label :"路線名" %></p>
        <p><%= n_station.text_field :route %></p>
        <p><%= f.label :"駅名" %></p>
        <p><%= n_station.text_field :station %></p>
        <p><%= f.label :"徒歩分数" %></p>
        <p><%= n_station.text_field :time %>分</p>
      <% end %>
    </div>
  <br>
<% end %>
<%= link_to "編集", edit_property_path %> | 
